        meta [:property => "fb:app_id", :content => "181828865198482"]
      else
        meta [:property => "fb:app_id", :content => "566747186753474"]
      end
    %>

    <%= metamagic %>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>

