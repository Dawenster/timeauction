#select-organization-modal.small.reveal-modal data-reveal="" ng-controller="OrganizationSelectionCtrl" data-url="#{select_organizations_path}"
  .row
    .small-12.columns
      h4.select-organization-title style="margin-bottom: 20px;"
        | You can bid on more auctions if you belong to any of the following organizations
      p style="font-style: italic; color: black; font-size: 14px;"
        | Please select all that apply
  .row ng-repeat="organization in organizations"
    .small-12.columns.organization-selection-holder ng-class="organization.selected ? 'organization-selection-holder-selected' : ''" ng-click="organization.selected=!organization.selected"
      ul.inline-list style="margin-bottom: 0px;"
        li.show-for-large-up
          img.organization-logo-with-border ng-src="{{organization.logo}}"
        li
          .org-selection-name
            | {{organization.name}}
          .org-selection-people-descriptor
            | {{organization.people_descriptor}} only
        i.fa.fa-check-circle.org-selected-checkmark class="ng-hide" ng-show="organization.selected"

    .small-12.columns.organization-fields-holder class="ng-hide" ng-show="organization.selected"
      .organization-fields ng-repeat="field in organization.fields"
        form novalidate=""
          .row
            .small-12.large-6.columns
              label
                | {{field.label}} 
                span style="font-style: italic; color: lightgrey;"
                  | {{field.required ? "*required" : ""}}
                input.org-select-input type="text" name="{{field.name}}" style="margin-top: 10px;" class="{{field.required ? 'requiredOrgSelectInput' : ''}}" ng-if="field.type == 'text'" data-org-name="{{organization.url}}" value="{{field.value}}"

                select.org-select-dropdown.org-select-input ng-if="field.type == 'select'" class="{{field.required ? 'requiredOrgSelectInput' : ''}}" style="margin-top: 10px;" name="{{field.name}}" data-org-name="{{organization.url}}"
                  option ng-repeat="select_option in field.select_options" value="{{field.value}}"
                    | {{select_option}}
                input.org-select-input.other-field type="text" name="{{field.name}}" style="display: none;" class="{{field.required ? 'requiredOrgSelectInput' : ''}}" data-org-name="{{organization.url}}" placeholder="Enter {{field.name}}" value="{{field.value}}"
                
                small.error style="display: none; margin-top: -17px;"
                  | This field is required

  a.button.alert.save-org-select-button style="margin-top: 10px; margin-left: 10px;" ng-click="submitOrgs()" data-url="#{assign_to_user_path}"
    | Save

  hr

  .row
    .small-12.columns
      .no-thanks-on-premium.right.remove-after-pay
        | Cancel, but thanks for asking!
      

